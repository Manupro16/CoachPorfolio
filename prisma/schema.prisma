// schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql" // or your preferred database
  url      = env("DATABASE_URL")
}

enum ImageSource {
  URL
  UPLOAD
}

// schema.prisma

model EarlyLife {
  id          Int         @id @default(autoincrement())
  imageSource ImageSource
  image       String? // URL of the image if imageSource is 'URL'
  imageData   Bytes? // Binary data of the image if imageSource is 'UPLOAD'
  imageType   String? // MIME type of the image if imageSource is 'UPLOAD'
  title       String
  content     String
  date        String
}

model PlayerCareer {
  id          Int         @id @default(autoincrement())
  imageSource ImageSource
  image       String? // URL of the image if imageSource is 'URL'
  imageData   Bytes? // Binary data of the image if imageSource is 'UPLOAD'
  imageType   String? // MIME type of the image if imageSource is 'UPLOAD'
  title       String
  content     String
  date        String
}

model CoachingCareer {
  id          Int         @id @default(autoincrement())
  imageSource ImageSource
  image       String? // URL of the image if imageSource is 'URL'
  imageData   Bytes? // Binary data of the image if imageSource is 'UPLOAD'
  imageType   String? // MIME type of the image if imageSource is 'UPLOAD'
  title       String
  content     String
  date        String
}
