// schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql" // or your preferred database
  url      = env("DATABASE_URL")
}

model EarlyLife {
  id      Int    @id @default(autoincrement())
  image   String
  title   String
  content String
}

