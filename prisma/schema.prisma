generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Story {
  id             Int             @id @default(autoincrement())
  introduction   String
  closingSection String
  earlyLife      EarlyLife?
  playingCareer  PlayingCareer?
  coachingCareer CoachingCareer?
  createdAt      DateTime        @default(now())
  updatedAt      DateTime        @updatedAt
}

model EarlyLife {
  id        Int      @id @default(autoincrement())
  content   String
  image     String
  story     Story    @relation(fields: [storyId], references: [id])
  storyId   Int      @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model PlayingCareer {
  id        Int      @id @default(autoincrement())
  content   String
  image     String
  story     Story    @relation(fields: [storyId], references: [id])
  storyId   Int      @unique
  teams     Team[]   @relation("PlayingCareerTeams")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model CoachingCareer {
  id        Int      @id @default(autoincrement())
  content   String
  image     String
  story     Story    @relation(fields: [storyId], references: [id])
  storyId   Int      @unique
  teams     Team[]   @relation("CoachingCareerTeams")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Team {
  id             Int              @id @default(autoincrement())
  name           String           @unique
  image          String
  dates          String
  description    String
  playingCareer  PlayingCareer[]  @relation("PlayingCareerTeams")
  coachingCareer CoachingCareer[] @relation("CoachingCareerTeams")
  createdAt      DateTime         @default(now())
  updatedAt      DateTime         @updatedAt
}
